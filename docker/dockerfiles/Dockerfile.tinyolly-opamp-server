# Build stage
FROM golang:1.25-alpine AS builder

WORKDIR /app

# Install git for fetching dependencies
RUN apk add --no-cache git

# Copy go mod files
COPY apps/tinyolly-opamp-server/go.mod ./

# Copy source code (needed for go mod tidy to resolve imports)
COPY apps/tinyolly-opamp-server/*.go ./

# Download dependencies and generate go.sum
RUN go mod download && go mod tidy

# Build the binary
RUN CGO_ENABLED=0 GOOS=linux go build -o /tinyolly-opamp-server .

# Runtime stage
FROM alpine:3.23

# Install bash for better shell experience (bash-completion not readily available in Alpine)
RUN apk add --no-cache \
    ca-certificates \
    bash \
    coreutils

# Create non-root user
RUN addgroup -g 1000 tinyolly && \
    adduser -u 1000 -G tinyolly -h /home/tinyolly -D -s /bin/bash tinyolly

# Set bash as default shell
SHELL ["/bin/bash", "-c"]

COPY --from=builder --chown=tinyolly:tinyolly /tinyolly-opamp-server /tinyolly-opamp-server

# Switch to non-root user
USER tinyolly

# OpAMP port for collector connections
EXPOSE 4320
# HTTP REST API port
EXPOSE 4321

CMD ["/tinyolly-opamp-server"]
