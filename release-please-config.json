{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    "apps/ollyscale": {
      "component": "ollyscale",
      "package-name": "ollyscale",
      "release-type": "python",
      "include-component-in-tag": true,
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "extra-files": [
        "app/__init__.py",
        "Dockerfile",
        {
          "type": "generic",
          "path": ".kind/modules/main/argocd-applications/observability/ollyscale.yaml",
          "glob": false
        },
        {
          "type": "yaml",
          "path": "charts/ollyscale/values.yaml",
          "jsonpath": "$.ollyscale.image.tag"
        }
      ]
    },
    "apps/ollyscale-ui": {
      "component": "ollyscale-ui",
      "package-name": "ollyscale-ui",
      "release-type": "node",
      "include-component-in-tag": true,
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "extra-files": [
        "Dockerfile",
        {
          "type": "generic",
          "path": ".kind/modules/main/argocd-applications/observability/ollyscale.yaml",
          "glob": false
        },
        {
          "type": "yaml",
          "path": "charts/ollyscale/values.yaml",
          "jsonpath": "$.webui.image.tag"
        }
      ]
    },
    "apps/opamp-server": {
      "component": "opamp-server",
      "package-name": "opamp-server",
      "release-type": "simple",
      "include-component-in-tag": true,
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "extra-files": [
        {
          "type": "generic",
          "path": "main.go",
          "glob": false
        },
        "Dockerfile",
        {
          "type": "generic",
          "path": ".kind/modules/main/argocd-applications/observability/ollyscale.yaml",
          "glob": false
        },
        {
          "type": "yaml",
          "path": "charts/ollyscale/values.yaml",
          "jsonpath": "$.opampServer.image.tag"
        }
      ]
    },
    "apps/demo": {
      "component": "demo",
      "package-name": "demo",
      "release-type": "python",
      "include-component-in-tag": true,
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "extra-files": [
        "__init__.py",
        "Dockerfile",
        {
          "type": "generic",
          "path": ".kind/modules/tinyolly/argocd-applications/observability/tinyolly-demos.yaml",
          "glob": false
        },
        {
          "type": "yaml",
          "path": "charts/ollyscale-demos/values.yaml",
          "jsonpath": "$.frontend.image.tag"
        }
      ]
    },
    "apps/demo-otel-agent": {
      "component": "demo-otel-agent",
      "package-name": "demo-otel-agent",
      "release-type": "python",
      "include-component-in-tag": true,
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "extra-files": [
        "__init__.py",
        "Dockerfile",
        {
          "type": "generic",
          "path": ".kind/modules/tinyolly/argocd-applications/observability/tinyolly-demo-otel-agent.yaml",
          "glob": false
        },
        {
          "type": "yaml",
          "path": "charts/ollyscale-otel-agent/values.yaml",
          "jsonpath": "$.aiAgent.image.tag"
        }
      ]
    },
    "charts/ollyscale": {
      "component": "helm-ollyscale",
      "package-name": "helm-ollyscale",
      "include-component-in-tag": true,
      "release-type": "helm",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "always-bump-patch": true
    },
    "charts/ollyscale-demos": {
      "component": "helm-demos",
      "package-name": "helm-ollyscale-demos",
      "include-component-in-tag": true,
      "release-type": "helm",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "always-bump-patch": true
    },
    "charts/ollyscale-otel-agent": {
      "component": "helm-demo-otel-agent",
      "package-name": "helm-ollyscale-otel-agent",
      "include-component-in-tag": true,
      "release-type": "helm",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "always-bump-patch": true
    }
  },
  "bootstrap-sha": "main",
  "release-search-depth": 100,
  "separate-pull-requests": false,
  "group-pull-request-title-pattern": "chore: release",
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features"
    },
    {
      "type": "fix",
      "section": "Bug Fixes"
    },
    {
      "type": "perf",
      "section": "Performance Improvements"
    },
    {
      "type": "revert",
      "section": "Reverts"
    },
    {
      "type": "docs",
      "section": "Documentation",
      "hidden": false
    },
    {
      "type": "style",
      "section": "Styles",
      "hidden": true
    },
    {
      "type": "chore",
      "section": "Miscellaneous Chores",
      "hidden": true
    },
    {
      "type": "refactor",
      "section": "Code Refactoring",
      "hidden": false
    },
    {
      "type": "test",
      "section": "Tests",
      "hidden": true
    },
    {
      "type": "build",
      "section": "Build System",
      "hidden": true
    },
    {
      "type": "ci",
      "section": "Continuous Integration",
      "hidden": true
    }
  ]
}
