{
  "branches": ["main"],
  "tagFormat": "demo-otel-agent-v${version}",
  "plugins": [
    ["@semantic-release/commit-analyzer", { "preset": "conventionalcommits" }],
    ["@semantic-release/release-notes-generator", { "preset": "conventionalcommits" }],
    ["@covage/semantic-release-poetry-plugin"],
    [
      "semantic-release-replace-plugin",
      {
        "replacements": [
          {
            "files": ["pyproject.toml"],
            "from": "version = \".*\"",
            "to": "version = \"${nextRelease.version}\""
          },
          {
            "files": ["__init__.py"],
            "from": "__version__ = \".*\"",
            "to": "__version__ = \"${nextRelease.version}\""
          }
        ]
      }
    ],
    [
      "semantic-release-yaml",
      {
        "commands": [
          {
            "cwd": "../../charts/ollyscale-otel-agent",
            "file": "values.yaml",
            "selector": "image.tag",
            "value": "v${nextRelease.version}"
          }
        ]
      }
    ],
    [
      "@codedependant/semantic-release-docker",
      {
        "dockerImage": "demo-otel-agent",
        "dockerRegistry": "ghcr.io",
        "dockerProject": "ryanfaircloth/ollyscale",
        "dockerFile": "Dockerfile",
        "dockerContext": ".",
        "dockerTags": ["latest", "{{major}}", "{{major}}.{{minor}}", "{{version}}"],
        "dockerBuildFlags": {
          "platform": "linux/amd64,linux/arm64"
        },
        "dockerPublish": true
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "apps/demo-otel-agent/pyproject.toml",
          "apps/demo-otel-agent/__init__.py",
          "../../charts/ollyscale-otel-agent/values.yaml"
        ],
        "message": "chore(demo-otel-agent): release v${nextRelease.version}"
      }
    ],
    "@semantic-release/github"
  ]
}
